generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserMaster {
  id    Int     @default(autoincrement()) @id
  name  String? @map("name")
  password String @map("password")
  items  ItemMaster[]

  
}

model ItemMaster {
  id Int @default(autoincrement()) @id
  name String
  itemId Int
  userId     Int        // リレーションの外部キー
  userMaster UserMaster @relation(fields: [userId], references: [id]) // リレーションの定義

  
}
